  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0",
    "@vitest/coverage-v8": "^2.0.0"
  },
  "keywords": [
    "nexus",
    "pay",
    "agent",
    "payments",
    "credits",
    "sdk"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nexi-lab/nexus",
    "directory": "packages/nexus-pay-ts"
  }
